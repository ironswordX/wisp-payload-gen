{
  "name": "wisp-payload-gen",
  "version": "1.0.3",
  "description": "A simple HTTP request/payload generator for the Wisp protocol.",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:types": "tsc --emitDeclarationOnly",
    "postbuild:esm": "find dist/esm -type f -name 'index.js' -exec bash -c 'mv \"$1\" \"${1%.js}.mjs\"' _ {} \\;",
    "build:esm": "tsc --project tsconfig.esm.json && npm run postbuild:esm",
    "postbuild:cjs": "find dist/cjs -name '*.js' -exec bash -c 'mv \"$0\" \"${0%.js}.cjs\"' {} \\;",
    "build:cjs": "tsc --project tsconfig.cjs.json && npm run postbuild:cjs",
    "build:web": "webpack --mode=production",
    "build:all": "npm run build:esm && npm run build:cjs && npm run build:web && npm run build:types"
  },
  "exports": {
    ".": {
      "import": "./dist/esm/index.mjs",
      "require": "./dist/cjs/index.cjs",
      "types": "./dist/types"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ironswordX/wisp-payload-gen.git"
  },
  "author": "ironswordX",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ironswordX/wisp-payload-gen/issues"
  },
  "homepage": "https://github.com/ironswordX/wisp-payload-gen#readme",
  "devDependencies": {
    "@types/node": "^24.0.10",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.3",
    "webpack": "^5.99.9",
    "webpack-cli": "^6.0.1"
  }
}
